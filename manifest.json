{
    "manifest_version": 2,

    "name": "Clip",
    "version": "1.0.1",
    "description": "Keeps your clipboard history.",
    "offline_enabled": true,

    "icons": {
        "16": "imgs/16.png",
        "48": "imgs/48.png",
        "128": "imgs/128.png"
    },

	"permissions": [
		"clipboardWrite",
		"clipboardRead",
		"storage"
	],
	
	"background": {
		"page": "background.html"
	},

    "browser_action": {
        "default_title": "Clip",
        "default_popup": "popup.html",
        "default_icon": {
            "19": "imgs/19.png",
            "38": "imgs/38.png"
        }
    }
 }
